<!-- views/pages/loggedin.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <title>Autoplaylists for Spotify</title>
</head>
<body>

    <header>
        <% include ../partials/loggedin_header %>
    </header>

    <main>
        <div class="jumbotron">
            <div class="container">
                <h1>Welcome <%= user %>!</h1>
                <p>Your playlists:</p>
                <div id="playlists" class="container">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            Loading
                        </div>
                    </div>
                </div>
                <h6>(it'll take a few hours for your playlist to first show up in spotify)</h6>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
        <% if(isAdmin){ %>
            <p class="text-center cancel"><a class='admin' href="/admin">Admin</a></p>
        <% } %>
    </footer>
</body>
</html>
<% include ../partials/css %>
<% include ../partials/scripts %>
